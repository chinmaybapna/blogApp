<html>
	<head>
		<link href="https://fonts.googleapis.com/css?family=Coiny|Baloo+Bhai|Lobster&display=swap" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
		<script src="https://kit.fontawesome.com/73cecacda3.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
		<title>Blog App</title>
	</head>
	<body>
		<!-- navigation bar -->
		<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
				<a class="navbar-brand" href="#"><i class="fas fa-code"></i> MyBlog</a>
				<ul class="navbar-nav">
					<li class="nav-item">
						<a href="/blogs" class="nav-link">Home</a>
					</li>
					<li class="nav-item">
						<a href="/blogs/new" class="nav-link">New Post</a>
					</li>	
			  	</ul>
				<ul class="navbar-nav ml-auto">	
					<% if(!currentUser){ %>
						<li class="nav-item">
							<a href="/login" class="nav-link">Log In</a>
						</li>	
						<li class="nav-item">
							<a href="/register" class="nav-link">Register</a>
						</li>
					<% } else { %>
						<li class="nav-item">
							<a href="#" class="nav-link"><%=currentUser.username%></a>
						</li>
						<li class="nav-item">
							<a href="/logout" class="nav-link">Log Out</a>
						</li>
					<% } %>
				</ul>
		</nav>
		<div class="container">
			<% if(success && success.length > 0) {%>
				<div class="alert alert-success" role="alert">
					<%=success%>
				</div>
			<% } %>
			<% if(error && error.length > 0) {%>
				<div class="alert alert-danger" role="alert">
					<%=error%>
				</div>
			<% } %>
		</div>