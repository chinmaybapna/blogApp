<% include ./partials/header %>

<div class="container form_container">
	<h1 class="form_heading">
		New Post
	</h1>
	<form action="/blogs" method="POST" class="form">
		<div class="form_group">
			<label>Title:</label>
			<input class="form-control" type="text" name="blog[title]" placeholder="title">
		</div>
		<div class="form_group">
			<label>Image:</label>
			<input class="form-control" type="text" name="blog[image]" placeholder="image URL">
		</div>
		<div class="form_group">
			<label>Content:</label>
			<textarea class="form-control" name="blog[body]" placeholder="your post goes here ..." rows="5"></textarea>
		</div>
		<button type="submit" class="btn btn-primary btn-lg">Submit</button>
	</form>
</div>

<% include ./partials/footer %>